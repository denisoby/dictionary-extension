{
    "name": "Oby-dictionary",
    "version": "1.0",
    "description": "translate and collect your own words",
    "manifest_version": 2,
    "permissions": ["identity"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icons-avocado-48.png",
            "32": "images/icons-avocado-48.png",
            "48": "images/icons-avocado-48.png",
            "128": "images/icons-avocado-48.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "all_frames": false,
            "run_at": "document_start",
            "js": ["content.js"]
        }
    ]
}
